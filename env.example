# Opus API Configuration
OPUS_API_KEY=your_opus_service_key_here
OPUS_BASE_URL=https://operator.opus.com
OPUS_WORKFLOW_ID=your_workflow_id_here

# Firecrawl Configuration
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
SCRAPING_INTERVAL_MINUTES=60
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Content Processing Configuration
MAX_ITEMS_PER_RUN=15
MIN_RELEVANCE_SCORE=0.5
DAILY_POST_LIMIT=30
ENABLE_CONTENT_DIVERSITY=true
IMMEDIATE_PROCESSING=true

# RSS Feed Configuration
USE_RSS_FEEDS=true
RSS_FRESHNESS_DAYS=7
RSS_FALLBACK_TO_CRAWL=true

# Credit Optimization (Firecrawl API - 3000 credits/month limit)
MAX_ARTICLES_PER_SOURCE=3
MAX_CRAWL_PAGES=3
ENABLE_URL_DEDUPLICATION=true
TRACK_CREDIT_USAGE=true

# Content Sources (comma-separated URLs)
# Note: Sources are now managed in the database (content_sources table)
# Run scripts/insert_sources.py to populate all sources
# These are legacy fallback sources if database is empty
CONTENT_SOURCES=https://techcrunch.com/category/artificial-intelligence/,https://www.theverge.com/ai-artificial-intelligence,https://huggingface.co/papers,https://paperswithcode.com/,https://alphasignal.ai/,https://www.therundown.ai/archive,https://bensbites.beehiiv.com/archive,https://tldr.tech/ai/archives,https://openai.com/news/,https://research.google/blog/,https://www.anthropic.com/news,https://www.microsoft.com/en-us/research/blog/,https://venturebeat.com/category/ai/

# Content Strategy
CONTENT_TYPES=industry_news,thought_leadership,case_study
TARGET_AUDIENCE=B2B_decision_makers
